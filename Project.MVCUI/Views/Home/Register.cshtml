@model UserRegisterRequestModel


<form asp-controller="Home" asp-action="Register" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label> Kullanıcı İsmi Giriniz </label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label> Email Giriniz </label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label> Şifre Giriniz </label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>

    <div> <button class="btn btn-primary"> Kayıt Ol </button> </div>

    <div class="text-danger" asp-validation-summary="ModelOnly" style="font-size : 50px">
        
    </div>

</form>
